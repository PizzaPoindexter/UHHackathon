<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hackathon.pizzapoindexter.uhhackathon"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="DrinkingBuddy"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="hackathon.pizzapoindexter.uhhackathon.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="hackathon.pizzapoindexter.uhhackathon.SettingsActivity" />
        <activity
            android:name="hackathon.pizzapoindexter.uhhackathon.DrinkingActivity"
            android:label="@string/title_activity_drinking"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="hackathon.pizzapoindexter.uhhackathon.NewDrink" />
        <activity android:name="hackathon.pizzapoindexter.uhhackathon.Beer" />
        <activity android:name="hackathon.pizzapoindexter.uhhackathon.Wine" />
        <activity android:name="hackathon.pizzapoindexter.uhhackathon.LiquorView" />
        <activity android:name="hackathon.pizzapoindexter.uhhackathon.AddOwn" />
    </application>

</manifest>